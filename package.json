{
  "name": "@sap/capire-bookshop",
  "version": "1.0.0",
  "description": "A simple bookshop application, build in a self-contained all-in-one fashion, i.e. w/o reusing other packages.",
  "license": "SAP SAMPLE CODE LICENSE",
  "dependencies": {
    "@sap/cds": "^3",
    "@sap/hana-client": "^2.4.182",
    "express": "^4",
    "hdb": "^0.18.0"
  },
  "devDependencies": {
    "sqlite3": "^4.1.1"
  },
  "scripts": {
    "start": "node app.js",
    "watch": "cds watch"
  },
  "cds": {
    "requires": {
      "db": {
          "kind": "hana",
          "model": [
            "db/",
            "srv/",
            "app/",
            "schema",
            "services",
            []
          ]
      }
    }
  }
}
